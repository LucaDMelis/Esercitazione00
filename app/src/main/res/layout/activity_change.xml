<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:orientation="vertical"
    tools:context=".ChangeActivity">


    <TextView
        android:id="@+id/ChangeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modifica password"
        android:textAlignment="center"
        android:textSize="36sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="50sp" />

    <TextView
        android:id="@+id/ChangeUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:textAlignment="textStart"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="24sp" />

    <TextView
        android:id="@+id/ChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Password: "
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="36sp" />

    <TextView
        android:id="@+id/ChangeNewPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nuova Password"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editNewPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:password="true" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="14sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conferma Password"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editConfirmPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:password="true" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="100sp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#16B920"
        android:text="Aggiorna Password"
        android:textAllCaps="false"
        android:textColor="#F1E9E9"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="14sp" />

    <Button
        android:id="@+id/HomeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#1E7BCE"
        android:text="Home"
        android:textAllCaps="false"
        android:textColor="#F1E9E9"
        android:textSize="30sp"
        android:textStyle="bold" />

</LinearLayout>